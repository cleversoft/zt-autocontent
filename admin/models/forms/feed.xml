<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_autocontent/models/rules">

    <fieldset name="details">
        <field
            name="id"
            type="hidden"
        />
        <field
            name="feed_name"
            type="text"
            label="COM_AUTOCONTENT_FEED_FIELD_FEED_NAME_LABEL"
            description="COM_AUTOCONTENT_FEED_FIELD_FEED_NAME_DESC"
            size="60"
            class="inputbox"
            required="true"
            default=""
        />		
        <field
            name="feed_url"
            type="text"
            label="COM_AUTOCONTENT_FEED_FIELD_FEED_URL_LABEL"
            description="COM_AUTOCONTENT_FEED_FIELD_FEED_URL_DESC"
            size="60"
            class="inputbox"
            required="true"
            default=""
        />
        <field
            name="update"
            type="text"
            label="COM_AUTOCONTENT_FEED_FIELD_UPDATE_LABEL"
            description="COM_AUTOCONTENT_FEED_FIELD_UPDATE_DESC"
            size="60"
            class="inputbox validate-numeric"
            required="true"
            default="1440"
        />
        <field
            name="get_articles"
            type="text"
            label="COM_AUTOCONTENT_FEED_FIELD_GET_ARTICLES_LABEL"
            description="COM_AUTOCONTENT_FEED_FIELD_GET_ARTICLES_DESC"
            size="60"
            class="inputbox"
            required="true"
            default="5"
        />
        <field
            name="type"
            type="hidden"			
            size="60"
            class="inputbox"
            required="true"
            default="feed"
        />
        <field
            name="status"
            type="list"
            label="COM_AUTOCONTENT_FEED_FIELD_STATUS_LABEL"
            description="COM_AUTOCONTENT_FEED_FIELD_STATUS_DESC"
            class="inputbox"
            required="true"
            default="1"
        >
            <option value="1">JOPTION_SELECT_STATUS_PUBLISHED</option>
            <option value="0">JOPTION_SELECT_STATUS_UNPUBLISHED</option>
        </field>
        <field
            name="get_class"
            type="hidden"
            label="COM_AUTOCONTENT_FEED_FIELD_GET_CLASS_LABEL"
            description="COM_AUTOCONTENT_FEED_FIELD_GET_CLASS_DESC"
            class="inputbox"
            required="false"
            cols="15"
            rows="3"
            filter="safehtml"
            default=""
        />
        <field
            name="ignore_class"
            type="textarea"
            label="COM_AUTOCONTENT_FEED_FIELD_IGNORE_CLASS_LABEL"
            description="COM_AUTOCONTENT_FEED_FIELD_IGNORE_CLASS_DESC"
            class="inputbox"
            required="false"
            cols="15"
            rows="5"
            filter="safehtml"
            default=""
        />
        <field
            name="get_id"
            type="hidden"
            label="COM_AUTOCONTENT_FEED_FIELD_GET_ID_LABEL"
            description="COM_AUTOCONTENT_FEED_FIELD_GET_ID_DESC"
            class="inputbox"
            required="false"
            cols="15"
            rows="3"
            filter="safehtml"
            default=""
        />
        <field
            name="ignore_id"
            type="textarea"
            label="COM_AUTOCONTENT_FEED_FIELD_IGNORE_ID_LABEL"
            description="COM_AUTOCONTENT_FEED_FIELD_IGNORE_ID_DESC"
            class="inputbox"
            required="false"
            cols="15"
            rows="4"
            filter="safehtml"
            default=""
        />
        <field
            name="creation_date"
            type="datetime"
            label="COM_AUTOCONTENT_CREATION_DATE"
            class="inputbox"
            required="false"
            default=""
        />
        <field
            name="start_publishing"
            type="datetime"
            label="COM_AUTOCONTENT_START_PUBLISHING"
            class="inputbox"
            required="false"
            default=""
        />
        <field
            name="author_id"
            type="user"				
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
            description="JGLOBAL_FIELD_CREATED_BY_DESC"
            class="inputbox"
        />
        <field
            name="published"
            type="list"
            label="COM_AUTOCONTENT_FEED_FIELD_PUBLISHED_LABEL"
            description="COM_AUTOCONTENT_FEED_FIELD_PUBLISHED_DESC"
            class="inputbox"
            required="true"
            default="1"
        >
            <option value="1">JOPTION_SELECT_PUBLISHED_PUBLISHED</option>
            <option value="0">JOPTION_SELECT_PUBLISHED_UNPUBLISHED</option>
        </field>				
    </fieldset>
	
    <fieldset
        name="settings"
        label="COM_AUTOCONTENT_FEED_ADVANCED_OPTIONS"
    >
        <field
            name="feed_type"
            type="radio"
            label="COM_AUTOCONTENT_FEED_FIELD_FEED_TYPE_LABEL"
            description="COM_AUTOCONTENT_FEED_FIELD_FEED_TYPE_DESC"
            class="inputbox"
            required="true"
            default="content"
        >
            <option value="content">JOPTION_SELECT_FEED_TYPE_CONTENT</option>
            <option value="k2">JOPTION_SELECT_FEED_TYPE_K2</option>
        </field>
        <field
            name="content_id"
            type="category"
            extension="com_content"
            label="COM_AUTOCONTENT_FEED_FIELD_CATEGORY_ID_LABEL"
            description="COM_AUTOCONTENT_FEED_FIELD_CATEGORY_ID_DESC"
            class="inputbox"
            required="false"
            default=""
        >
        </field>
        <field
            name="k2_id"
            type="k2category"				
            label="COM_AUTOCONTENT_FEED_FIELD_K2_CATEGORY_LABEL"
            description="COM_AUTOCONTENT_FEED_FIELD_K2_CATEGORY_DESC"
            class="inputbox"
            required="false"
            default=""
        >
        </field>
		
    </fieldset>
	
